---
import { NAVIGATION } from "@/data/navigation";
import { SERVICES } from "@/data/services";
import {
  Phone,
  Mail,
  MapPin,
  Facebook,
  Instagram,
  Linkedin,
} from "@lucide/astro";
import { Image } from "astro:assets";

const currentYear = new Date().getFullYear();

const footerLinks = {
  services: SERVICES,
  company: NAVIGATION,
  legal: [
    "Términos de servicio",
    "Política de privacidad",
    "Política de cancelación",
    "FAQ",
    "Soporte",
  ],
};
---

<footer class="bg-brand-dark text-white mb-auto">
  <div class="container mx-auto px-4 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {/* Logo and Description */}
      <div class="lg:col-span-1">
        <Image
          src="/logo.svg"
          alt="Logo de la empresa"
          class="w-32 mb-4"
          width={128}
          height={64}
        />
        <p class="text-gray-300 mb-6 leading-relaxed">
          Más de 25 años ofreciendo servicios de transporte premium con la más
          alta calidad, seguridad y puntualidad en cada viaje.
        </p>

        {/* Contact Info */}
        <div class="space-y-3">
          <div class="flex items-center space-x-3">
            <Phone class="w-5 h-5 text-primary" />
            <span class="text-gray-300">+57 (1) 234-5678</span>
          </div>
          <div class="flex items-center space-x-3">
            <Mail class="w-5 h-5 text-primary" />
            <span class="text-gray-300">info@transvip.com</span>
          </div>
          <div class="flex items-center space-x-3">
            <MapPin class="w-5 h-5 text-primary" />
            <span class="text-gray-300">Bogotá, Colombia</span>
          </div>
        </div>
      </div>

      {/* Services */}
      <div>
        <h3 class="text-lg font-semibold mb-6">Servicios</h3>
        <ul class="space-y-3">
          {
            footerLinks.services.map((link) => (
              <li>
                <a
                  href={`/#${link.id}`}
                  aria-label={link.title}
                  class="text-gray-300 hover:text-white transition-brand"
                >
                  {link.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Company */}
      <div>
        <h3 class="text-lg font-semibold mb-6">Empresa</h3>
        <ul class="space-y-3">
          {
            footerLinks.company.map((link) => (
              <li>
                <a
                  href={!link.href.startsWith("#") ? link.href : `/${link.href}`}
                  aria-label={link.name}
                  class="text-gray-300 hover:text-white transition-brand"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Legal */}
      <div>
        <h3 class="text-lg font-semibold mb-6">Legal</h3>
        <ul class="space-y-3">
          {
            footerLinks.legal.map((link) => (
              <li>
                <a
                  href="#"
                  aria-label={link}
                  class="text-gray-300 hover:text-white transition-brand"
                >
                  {link}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    {/* Social Media and Newsletter */}
    <div class="border-t border-gray-700 mt-12 pt-8">
      <div
        class="flex flex-col lg:flex-row justify-between items-center space-y-6 lg:space-y-0"
      >
        {/* Social Media */}
        <div class="flex items-center space-x-6">
          <span class="text-gray-300">Síguenos:</span>
          <div class="flex space-x-4">
            <a
              href="https://www.facebook.com/satelital355"
              aria-label="Facebook"
              class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center hover:bg-primary transition-brand"
            >
              <Facebook class="w-5 h-5" />
            </a>
            <a
              href="https://www.instagram.com/satelital355/"
              aria-label="Instagram"
              class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center hover:bg-primary transition-brand"
            >
              <Instagram class="w-5 h-5" />
            </a>
            <a
              href="https://www.tiktok.com/@satelital355"
              aria-label="TikTok"
              class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center hover:bg-primary transition-brand"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="36"
                height="36"
                viewBox="0 0 36 36"
                class="size-9"
                fill="none"
                ><rect width="36" height="36" rx="8" ></rect><path
                  d="M24.7584 12.4912C24.6183 12.4179 24.4818 12.3376 24.3496 12.2505C23.9651 11.9935 23.6125 11.6906 23.2995 11.3485C22.5165 10.4424 22.224 9.5233 22.1163 8.87977H22.1206C22.0306 8.34561 22.0678 8 22.0734 8H18.5067V21.9459C18.5067 22.1332 18.5067 22.3182 18.4989 22.5011C18.4989 22.5238 18.4967 22.5448 18.4954 22.5693C18.4954 22.5794 18.4954 22.5899 18.4932 22.6004C18.4932 22.603 18.4932 22.6056 18.4932 22.6083C18.4556 23.1086 18.297 23.592 18.0313 24.0159C17.7656 24.4397 17.401 24.791 16.9695 25.0389C16.5197 25.2976 16.0111 25.4333 15.4937 25.4326C13.8319 25.4326 12.485 24.0624 12.485 22.3703C12.485 20.6781 13.8319 19.3079 15.4937 19.3079C15.8083 19.3076 16.1209 19.3577 16.42 19.4562L16.4243 15.784C15.5163 15.6655 14.5939 15.7384 13.7152 15.9983C12.8365 16.2583 12.0207 16.6995 11.319 17.2942C10.7043 17.8343 10.1874 18.4788 9.7918 19.1986C9.64124 19.4611 9.07317 20.5158 9.00437 22.2277C8.96111 23.1993 9.24969 24.2059 9.38727 24.622V24.6307C9.4738 24.8757 9.8091 25.7117 10.3555 26.4165C10.7962 26.9819 11.3168 27.4785 11.9005 27.8904V27.8816L11.9092 27.8904C13.6359 29.0768 15.5504 28.999 15.5504 28.999C15.8818 28.9854 16.992 28.999 18.2527 28.3948C19.651 27.725 20.4471 26.7271 20.4471 26.7271C20.9557 26.1309 21.3601 25.4514 21.6429 24.7178C21.9657 23.8599 22.0734 22.8309 22.0734 22.4197V15.0211C22.1167 15.0473 22.693 15.4328 22.693 15.4328C22.693 15.4328 23.5232 15.9709 24.8186 16.3213C25.7479 16.5706 27 16.6231 27 16.6231V13.0428C26.5613 13.0909 25.6705 12.9509 24.7584 12.4912Z"
                  fill="white"></path></svg
              >
              
            </a>
            <a
              href="https://www.linkedin.com/company/auto-taxi-satelital/"
              aria-label="LinkedIn"
              class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center hover:bg-primary transition-brand"
            >
              <Linkedin class="w-5 h-5" />
            </a>
          </div>
        </div>
      </div>
    </div>

    {/* Copyright */}
    <div class="border-t border-gray-700 mt-8 pt-8 text-center">
      <div
        class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0"
      >
        <p class="text-gray-400">
          © {currentYear} PeGO. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6 text-sm">
          <a
            href="#"
            aria-label="Política de Privacidad"
            class="text-gray-400 hover:text-white transition-brand"
          >
            Política de Privacidad
          </a>
          <a
            href="#"
            aria-label="Términos de Servicio"
            class="text-gray-400 hover:text-white transition-brand"
          >
            Términos de Servicio
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
