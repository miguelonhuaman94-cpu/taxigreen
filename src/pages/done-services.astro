        {
          stats.map((stat, index) => (
            <Card
              key={index}
              class="card-brand border-0 text-center hover-scale cursor-pointer"
            >
              <CardContent class="p-6">
                <div class="w-12 h-12 bg-brand-red rounded-full flex items-center justify-center mx-auto mb-4">
                  <stat.icon class="w-6 h-6 text-white" />
                </div>
                <div class="text-3xl font-bold text-brand-dark mb-2">
                  {stat.number}
                </div>
                <div class="text-brand-gray font-medium">{stat.label}</div>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </div>
  </section>

  {/* Completed Services */}
  <section class="pb-16">
    <div class="container mx-auto px-4 lg:px-8">
      <SectionTitle
        title="Servicios Destacados"
        description="Algunos de nuestros proyectos más exitosos y memorables"
        />

      <div class="grid lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {
          completedServices.map((service) => (
            <Card
              key={service.id}
              class="card-brand border-0 overflow-hidden bg-white hover-scale"
            >
              <Image
                src={`/images/services/${service.id}.jpg`}
                alt={service.title}
                class="w-full h-48 object-cover"
                width={600}
                height={400}
                loading="lazy"
              />
              <CardContent class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="text-lg font-bold text-brand-dark mb-1">
                      {service.title}
                    </h3>
                    <p class="text-brand-gray text-sm">{service.client}</p>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-4 mb-4">
                  <div class="flex items-center space-x-2">
                    <Calendar class="w-4 h-4 text-brand-red" />
                    <span class="text-sm text-brand-gray">{service.date}</span>
                  </div>
                  <div class="flex items-center space-x-2">
                    <Clock class="w-4 h-4 text-brand-red" />
                    <span class="text-sm text-brand-gray">
                      {service.duration}
                    </span>
                  </div>
                  <div class="flex items-center space-x-2">
                    <Users class="w-4 h-4 text-brand-red" />
                    <span class="text-sm text-brand-gray">
                      {service.passengers}
                    </span>
                  </div>
                  <Badge
                    variant="outline"
                    class="text-xs w-fit border-brand-red text-brand-red"
                  >
                    {service.service}
                  </Badge>
                </div>

                <p class="text-brand-gray text-sm mb-4 leading-relaxed">
                  {service.description}
                </p>

                <div class="mb-4">
                  <h4 class="text-sm font-bold text-brand-dark mb-2">
                    Servicios incluidos:
                  </h4>
                  <div class="grid grid-cols-2 gap-1">
                    {service.highlights.map((highlight, index) => (
                      <div class="flex items-center space-x-1">
                        <CheckCircle class="w-3 h-3 text-green-500" />
                        <span class="text-xs text-brand-gray">{highlight}</span>
                      </div>
                    ))}
                  </div>
                </div>

                <Button
                  size="sm"
                  class="w-full"
                >
                  Ver Detalles
                </Button>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
