---
import SectionTitle from "@/components/SectionTitle.astro";
import Button from "@/components/ui/Button.astro";
import CardContent from "@/components/ui/card/CardContent.astro";
import { MapPin, Star, Clock, Car } from "@lucide/astro";
import { Image } from "astro:assets";
import Card from "@/sections/home/components/Card.astro";

const destinations = [
  {
    name: "Auto",
    description: "Ideal para individuos o grupos pequeños.",
    image:
      "https://images.unsplash.com/photo-1605894668519-2cd2a5cb2d2e?w=800&h=600&fit=crop&crop=entropy&auto=format",
  },
  {
    name: "SUV",
    description: "Perfecto para familias o grupos de hasta 6.",
    image:
      "https://images.unsplash.com/photo-1552832230-592beeb95b83?w=800&h=600&fit=crop&crop=entropy&auto=format",
  },
  {
    name: "Van",
    description: "Opción espaciosa para grupos más grandes.",
    image:
      "https://images.unsplash.com/photo-1564273132672-8b4b4d2f2c1a?w=800&h=600&fit=crop&crop=entropy&auto=format",
  },
  {
    name: "Minibús",
    description: "Ideal para eventos y grupos grandes.",
    image:
      "https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800&h=600&fit=crop&crop=entropy&auto=format",
  },
];
---

<section id="destinos" class="py-20 bg-background">
  <div class="container mx-auto px-4 lg:px-8">
    <SectionTitle
      title="Vehículos de traslado al aeropuerto"
      description="Flexibilidad total con nuestros servicios especializados y flota de vehículos premium"
    />

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        destinations.map((destination, index) => (
          <Card
            key={index}
            title={destination.name}
            sectionName="airport-transfer-vehicles"
            id={`airport-transfer-vehicle-${index}`}
          >
            <CardContent class="p-6">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-xl font-semibold text-brand-dark flex items-center">
                  <Car class="w-5 h-5 text-primary mr-2" />
                  {destination.name}
                </h3>
              </div>

              <p class="text-brand-gray mb-6 leading-relaxed">
                {destination.description}
              </p>

              <Button aria-label="Reservar Ahora" size="sm" class="w-full">
                Reservar ahora
              </Button>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
