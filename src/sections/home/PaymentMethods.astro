---
import { CreditCard, Smartphone, Building2, Banknote } from "@lucide/astro";

import Card from "@/components/ui/card/Card.astro";

import SectionTitle from "@/components/SectionTitle.astro";
import { Image } from "astro:assets";

const paymentMethods = [
  {
    name: "Tarjetas de Crédito",
    description: "Visa, Mastercard, American Express",
    icon: CreditCard,
    image:
      "https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=300&h=200&fit=crop&crop=entropy&auto=format",
    features: ["Pago seguro", "Procesamiento inmediato", "Cuotas disponibles"],
  },
  {
    name: "Pago Digital",
    description: "PSE, Nequi, Daviplata, Bancolombia",
    icon: Smartphone,
    image:
      "https://images.unsplash.com/photo-1563013544-824ae1b704d3?w=300&h=200&fit=crop&crop=entropy&auto=format",
    features: ["Transferencia inmediata", "Sin comisiones", "Disponible 24/7"],
  },
  {
    name: "Transferencia Bancaria",
    description: "Todos los bancos principales",
    icon: Building2,
    image:
      "https://images.unsplash.com/photo-1554224155-6726b3ff858f?w=300&h=200&fit=crop&crop=entropy&auto=format",
    features: [
      "Pagos empresariales",
      "Facturación electrónica",
      "Comprobantes oficiales",
    ],
  },
  {
    name: "Efectivo",
    description: "Pago directo al conductor",
    icon: Banknote,
    image:
      "https://images.unsplash.com/photo-1607863680198-23d4b2565df0?w=300&h=200&fit=crop&crop=entropy&auto=format",
    features: ["Sin comisiones", "Recibo físico", "Cambio exacto"],
  },
];
---

<section class="pb-20 bg-background">
  <div class="container mx-auto px-4 lg:px-8">
    <SectionTitle
      title="Métodos de Pago"
      description="Elige la opción que mejor se adapte a tus necesidades"
    />

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        paymentMethods.map((method) => (
          <Card class="group card-brand hover-scale border-0 overflow-hidden">
            <div class="relative h-40 overflow-hidden">
              <Image
                src={method.image}
                alt={method.name}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                width={600}
                height={400}
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-brand-dark/60 to-transparent" />
              <div class="absolute top-4 left-4 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-lg flex items-center justify-center">
                <method.icon class="w-5 h-5 text-primary" />
              </div>
            </div>
          </Card>
        ))
      }
    </div>
  </div>
</section>
