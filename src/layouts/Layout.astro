import "../styles/global.css";

const phoneNumber = "+51907489956"; // Update with your WhatsApp number
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="follow, index, max-snippet:-1, max-video-preview:-1, max-image-preview:large" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>Taxi Green Aeropuerto Lima :: Servicio de Taxi Aeropuerto las 24 Horas</title>
    <meta name="description" content="Taxi Green Aeropuerto Lima, Servicio de Taxi Aeropuerto las 24 Horas, Servicio Ejecutivo de Taxi Aeropuerto" />
