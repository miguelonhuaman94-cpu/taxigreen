---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import WhatsApp from "@/components/WhatsApp.astro";
import "@fontsource/poppins/100.css";
import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";
import "@fontsource/poppins/900.css";
import "../styles/global.css";

import { PHONE_NUMBER, URL_SITE } from "astro:env/client";
---

<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />

    <title>Taxi Green Premium | Taxi Aeropuerto Lima 24h - Servicio de Transporte</title>

    <meta name="description" content="Taxi Green Premium te ofrece taxi al aeropuerto de Lima las 24 horas. Servicio ejecutivo, puntual, seguro y con factura. ¡Reserva ahora vía WhatsApp!" />
    <meta name="keywords" content="taxi aeropuerto Lima, taxi Green Premium, taxi ejecutivo Lima, taxi con factura, taxi 24 horas Lima, taxi seguro Lima, taxi Jorge Chávez" />
    <meta name="author" content="Taxi Green Premium" />
    <link rel="canonical" href="https://www.taxigreenpremium.com" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:locale" content="es_PE" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Taxi Aeropuerto Lima 24h | Taxi Green Premium" />
    <meta property="og:description" content="Servicio de taxi aeropuerto en Lima con atención las 24 horas. Puntualidad, comodidad y seguridad garantizadas." />
    <meta property="og:url" content="https://www.taxigreenpremium.com" />
    <meta property="og:site_name" content="Taxi Green Premium" />
    <meta property="og:image" content="/hero.webp" />
    <meta property="og:image:secure_url" content="/hero.webp" />
    <meta property="og:image:width" content="1680" />
    <meta property="og:image:height" content="1120" />
    <meta property="og:image:alt" content="Taxi Green Premium - Transporte al aeropuerto de Lima" />
    <meta property="og:image:type" content="image/webp" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Taxi Aeropuerto Lima 24h | Taxi Green Premium" />
    <meta name="twitter:description" content="Taxi Green Premium: Servicio ejecutivo y confiable al Aeropuerto Jorge Chávez. Reserva por WhatsApp 24/7." />
    <meta name="twitter:image" content="/hero.webp" />
    <meta name="twitter:site" content="@TaxiGreenLima" />
    <meta name="twitter:creator" content="@TaxiGreenLima" />

    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@graph": [
            {
                "@type": "LocalBusiness",
                "@id": "https://www.taxigreenpremium.com/#localbusiness",
                "name": "Taxi Green Premium",
                "image": "https://www.taxigreenpremium.com/logo.png",
                "url": "https://www.taxigreenpremium.com",
                "telephone": PHONE_NUMBER,
                "address": {
                    "@type": "PostalAddress",
                    "addressLocality": "Lima",
                    "addressRegion": "Lima",
                    "postalCode": "15000",
                    "addressCountry": "PE"
                },
                "geo": {
                    "@type": "GeoCoordinates",
                    "latitude": -12.021093,
                    "longitude": -77.118858
                },
                "openingHoursSpecification": {
                    "@type": "OpeningHoursSpecification",
                    "dayOfWeek": [
                        "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"
                    ],
                    "opens": "00:00",
                    "closes": "23:59"
                },
                "priceRange": "$$",
                "description": "Servicio de taxi aeropuerto Lima con atención ejecutiva y puntual."
            },
            {
                "@type": "WebSite",
                "@id": "https://www.taxigreenpremium.com/#website",
                "url": "https://www.taxigreenpremium.com",
                "name": "Taxi Green Premium",
                "publisher": {
                    "@id": "https://www.taxigreenpremium.com/#localbusiness"
                },
                "inLanguage": "es",
                "potentialAction": {
                    "@type": "SearchAction",
                    "target": "https://www.taxigreenpremium.com/?s={search_term_string}",
                    "query-input": "required name=search_term_string"
                }
            }
        ]
    })} />
</head>

<body>
<Header />
<main>
    <slot />
</main>
<WhatsApp />
<Footer />
</body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: "Poppins", sans-serif;
    }
</style>

<script define:vars={{ phoneNumber: PHONE_NUMBER }}>
    const reservationButtons = document.querySelectorAll("[data-message]");
    reservationButtons.forEach((button) => {
        button.addEventListener("click", () => {
            const message = button.getAttribute("data-message");
            const whatsappUrl = `https://api.whatsapp.com/send?phone=${phoneNumber}&text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, "_blank");
        });
    });
</script>
