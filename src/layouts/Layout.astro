---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import WhatsApp from "@/components/WhatsApp.astro";
import "@fontsource/poppins/100.css";
import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";
import "@fontsource/poppins/900.css";

import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>PeGO - Transporte Premium</title>

    <meta name="description" content="PeGO ofrece servicios de transporte premium con vehículos de alta gama y atención personalizada. Descubre nuestra flota y servicios." />
    <meta name="keywords" content="transporte premium, vehículos de lujo, servicio de transporte, flota de vehículos, atención personalizada" />
    <meta name="author" content="PeGO" />
    
    {/* Open Graph Meta Tags */}
    <meta property="og:title" content="PeGO - Transporte Premium" />
    <meta property="og:description" content="PeGO ofrece servicios de transporte premium con vehículos de alta gama y atención personalizada. Descubre nuestra flota y servicios." />
    <meta property="og:image" content="/placeholder.svg?height=300&width=400" />
    <meta property="og:url" content="https://pegoinfo.netlify.app" />
    <meta property="og:type" content="website" />

    {/* Twitter Card Meta Tags */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="PeGO - Transporte Premium" />
    <meta name="twitter:description" content="PeGO ofrece servicios de transporte premium con vehículos de alta gama y atención personalizada. Descubre nuestra flota y servicios." />
    <meta name="twitter:image" content="/placeholder.svg?height=300&width=400" />
    <meta name="twitter:site" content="@PeGO" />
    <meta name="twitter:creator" content="@PeGO" />


  </head>
  <body>
    <Header />
    <slot />
    <WhatsApp />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Poppins", sans-serif;
  }



.logo {
  height: 6em;
  padding: 1.5em;
  will-change: filter;
  transition: filter 300ms;
}
.logo:hover {
  filter: drop-shadow(0 0 2em #646cffaa);
}
.logo.react:hover {
  filter: drop-shadow(0 0 2em #61dafbaa);
}

@keyframes logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@media (prefers-reduced-motion: no-preference) {
  a:nth-of-type(2) .logo {
    animation: logo-spin infinite 20s linear;
  }
}

.card {
  padding: 2em;
}

.read-the-docs {
  color: #888;
}

</style>
