    <meta property="og:image:height" content="1120" />
    <meta property="og:image:alt" content="Taxi Green Lima - Servicio de transporte confiable" />
    <meta property="og:image:type" content="image/webp" />

    {/* Twitter Card Meta Tags */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Taxi Green Lima | Servicio de transporte confiable 24 horas" />
    <meta name="twitter:description" content="Somos Taxi Green Lima, empresa de servicio de transporte de pasajeros con la flota más grande, moderna y confiable de Lima. Servicios las 24 horas." />
    <meta name="twitter:image" content="/hero.webp" />
    <meta name="twitter:site" content="@TaxiGreenLima" />
    <meta name="twitter:creator" content="@TaxiGreenLima" />

   
    {/* Schema.org JSON-LD */}
    <script
      define:vars={{
        phoneNumber,
      }}
    type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": ["TaxiService", "Organization"],
            "@id": "https://green-9xc.pages.dev/#organization",
            "name": "Taxi Satelital 355",
            "url": "https://green-9xc.pages.dev",
            "description": "Empresa de servicio de transporte de pasajeros con la flota más grande, moderna y confiable de Lima",
            "telephone": {phoneNumber},
            "address": {
              "@type": "PostalAddress",
              "addressLocality": "Lima",
              "addressCountry": "PE"
            },
            "openingHours": "Mo,Tu,We,Th,Fr,Sa,Su 00:00-23:59",
            "priceRange": "$$",
            "serviceArea": {
              "@type": "GeoCircle",
              "geoMidpoint": {
                "@type": "GeoCoordinates",
                "latitude": -12.021093,
                "longitude": -77.118858
              },
              "geoRadius": "50000"
            }
          },
          {
            "@type": "WebSite",
            "@id": "https://green-9xc.pages.dev/#website",
            "url": "https://green-9xc.pages.dev",
            "name": "Taxi Green Lima",
            "publisher": {
              "@id": "https://green-9xc.pages.dev/#organization"
